<head>
    <%= include_gon %>
    <script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
    <script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>
    <script src="https://maps.googleapis.com/maps/api/js?v=3.exp&libraries=drawing"></script>
    <%= javascript_include_tag "locations_js/locations_new.js" %>
</head>

<h1>Add a Trail</h1>


<%= form_for Trail.new do |f| %>
	<%= f.label :name %>
	<%= f.text_field :name, class: "form-control" %> 
	<br/>
	<%= f.label :description %>
	<br/>
	<%= f.text_area :description, class: "form-control", :rows => "7" %>
	<br/>
    <%= f.hidden_field :user_id, :value => current_user.id %>

	<%= f.fields_for :location, Location.new do |l| %>
		<div class="field">
	    <%= l.label :name %><br />
	    <%= l.text_field :name %>
	  	</div>
	  	<div class="field">
	    <%= l.hidden_field :startLat %>
	  	</div>
	  	<div class="field">
	    <%= l.hidden_field :startLng %>
	  	</div>
	  	<div class="field">
	    <%= l.hidden_field :endLat %>
	  	</div>
	  	<div class="field">
	    <%= l.hidden_field :endLng %>
	  	</div>
	  	<div class="field">
	    <%= l.hidden_field :path %>
	  	</div>
	  	<div class="field" id="newmap" style='width: 800px; height: 400px;'>
	    
	  	</div>

	<% end %>

	<%= f.submit :class => "btn btn-default" %>

<% end %>
