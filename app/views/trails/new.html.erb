<h1>Add a Trail</h1>
<%= form_for Trail.new do |f| %>
	<%= f.label :name %>
	<%= f.text_field :name, class: "form-control" %> 
	<br/>
	<%= f.label :description %>
	<br/>
	<%= f.text_area :description, class: "form-control", :rows => "7" %>
	<br/>
    <%= f.hidden_field :user_id, :value => current_user.id %>
	<%= f.submit :class => "btn btn-default" %>
<% end %>
