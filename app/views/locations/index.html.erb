<head>
    <%= include_gon %>
    <script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
    <script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>
    <script src="https://maps.googleapis.com/maps/api/js?v=3.exp&libraries=drawing"></script>
    <%= javascript_include_tag "locations_js/locations_index.js" %>
</head>
    


<h1>Listing locations</h1>

<table>
    <col width = "100">
    <col width = "250">
    <col width = "250">
  <tr>
    <th>Name</th>
    <th>Start</th>
    <th>End</th>
    
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @locations.each do |location| %>
  <tr>
    <td><%= location.name %></td>
    <td>(<%= location.startLat %>, <%= location.startLng %>)</td>
    <td>(<%= location.endLat %>, <%= location.endLng %>)</td>
    
    <td><%= link_to 'Show', location %></td>
    <td><%= link_to 'Edit', edit_location_path(location) %></td>
    <td><%= link_to 'Destroy', location, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Location', new_location_path %>

<div style='width: 800px;'>
  <div class="fluid-map-container" id="indexmap" style='width: 800px; height: 400px;'></div>
</div>


