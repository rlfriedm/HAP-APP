gem 'sunspot_solr'
gem 'gravatar_image_tag', '0.1.0'
gem 'paperclip'


# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'
  gem 'uglifier', '>= 1.0.3'
end

gem 'jquery-rails'

group :test, :development do
  gem 'turn'
  gem 'rspec-rails', '2.4.1'
  gem 'capybara'
  gem 'guard-rspec'
end


